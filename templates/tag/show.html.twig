{% extends 'base.html.twig' %}

{% block title %}Tag{% endblock %}

{% block body %}
    <h1>Tag</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tag.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tag.name }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('tag_index') }}">back to list</a>

    <a href="{{ path('tag_edit', {'id': tag.id}) }}">edit</a>

    {{ include('tag/_delete_form.html.twig') }}

    <h1>Articles</h1>
    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <th>Nom de l'article</th>
        </tr>
        {% for article in tag.articles %}
        <tr>
            <td>{{ article.id }}</td>
            <td>{{ article.title }}</td>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}

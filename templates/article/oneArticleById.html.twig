{% extends 'base.html.twig' %}

{% block title %}one article{% endblock %}

{% block body %}

<h1>titre de l'article : {{ article.title }}</h1>

<h3>Contenu de l'article :</h3>
    <p>{{ article.content }}</p>

    <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
    <br>

    <strong>Tags :</strong>
    <ul>
        {% for tag in article.tags %}
            <li><a href="/tag/{{ tag.name }}">{{ tag.name }} </a></li>
        {% else %}
            <li>No tags for this article</li>
        {% endfor %}
    </ul>

    <strong>Slug nigger !!! :</strong>
    <ul>
        <li>{{ article.slug }}</li>
    </ul>

    <a href="{{ path('blog_index') }}">
        back in the house once again
    </a>

{% endblock %}
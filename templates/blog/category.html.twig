{# templates/blog/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}

    <h1>3 last articles by category</h1>
    <h1>Cat√©gorie : {{ categories.name }}</h1>
    <br>
    <table style="width: 500px; text-align: center">
        <thead>
            <tr>
                <th>id</th>
                <th>nom</th>
                <th>contenu</th>
                <th>categorie</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.content }}</td>
                <td>{{ article.category.name }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('homepage') }}">
        Back homepage.
    </a>
    <br>
    <a href="{{ path('blog_index') }}">
        Back to all articles.
    </a>
    <br>
    <a href="/blog/category/{{ categories.name }}/all">
        Back to all articles of this category.
    </a>


{% endblock %}